    "angular-route": "^1.6.6",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "cheerio": "^1.0.0-rc.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.2",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "supervisor": "^0.12.0",
    "watchify": "^3.9.0"
