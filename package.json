    "prestart": "npm install",
    "start": "node index",
    "dev": "supervisor index",
    "build:js": "browserify src/js/app.js > client/app.js",
    "build:js:watch": "watchify -t babelify src/js/app.js -d -o client/app.js -v",
    "build:scss": "node-sass src/scss/styles.scss client/styles.css",
    "build:scss:watch": "node-sass src/scss/styles.scss client/styles.css --watch",
    "work": "npm-run-all --parallel dev build:js:watch build:scss:watch"
  },
